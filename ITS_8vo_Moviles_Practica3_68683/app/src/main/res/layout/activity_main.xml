<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="283dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="#DF88ED"
        android:textColor="#FFFFFF"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="349dp"
        android:layout_height="338dp"
        android:layout_margin="16dp"
        android:layout_marginTop="196dp"
        android:columnCount="4"
        android:background="#FF6699"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult">

        <!-- Botones -->
        <Button
            android:id="@+id/btnMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MC"
            android:background="#FF99CC"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR"
            android:background="#FF6699"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M+"
            android:background="#FF6699"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-"
            android:background="#FF6699"
            android:textColor="#FFFFFF"/>

        <!-- Segunda fila -->
        <Button android:id="@+id/btnClear" android:text="C"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnDivide" android:text="/"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnMultiply" android:text="×"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnDelete" android:text="DEL"  android:textColor="#FFFFFF"/>

        <!-- Tercera fila -->
        <Button android:id="@+id/btn7" android:text="7"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn8" android:text="8"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn9" android:text="9"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnSubtract" android:text="-"  android:textColor="#FFFFFF"/>

        <!-- Cuarta fila -->
        <Button android:id="@+id/btn4" android:text="4"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn5" android:text="5"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn6" android:text="6"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnAdd" android:text="+"  android:textColor="#FFFFFF"/>

        <!-- Quinta fila -->
        <Button android:id="@+id/btn1" android:text="1"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn2" android:text="2"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btn3" android:text="3"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnEquals" android:text="="  android:textColor="#FFFFFF"/>

        <!-- Sexta fila -->
        <Button android:id="@+id/btn0" android:text="0"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnDecimal" android:text="."  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnPower" android:text="xʸ"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnRoot" android:text="√"  android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnPercent" android:text="%"  android:textColor="#FFFFFF"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
